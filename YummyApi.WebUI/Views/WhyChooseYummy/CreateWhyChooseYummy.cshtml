@model CreateWhyChooseYummyDTO
@{
    ViewData["Title"] = "CreateWhyChooseYummy";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Neden Bizi Seçmelisiniz Ekleme Sayfası</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <label>Başlık</label>
                            <input type="text" asp-for="ServiceTitle" class="form-control" />
                            <br />
                            <label>Açıklama</label>
                            <input type="text" asp-for="ServiceDescription" class="form-control" />
                            <br />
                            <label>Icon URL</label>
                            <input type="text" asp-for="ServiceIconURL" class="form-control" />
                            <br />
                            <button class="btn btn-primary">Alanı Oluştur</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

