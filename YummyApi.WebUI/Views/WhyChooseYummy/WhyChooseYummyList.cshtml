@model List<ResultWhyChooseYummyDTO>
@{
    ViewData["Title"] = "WhyChooseYummyList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Neden Bizi Seçmelisiniz Listesi</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>

                                        <th scope="row">@count</th>
                                        <td>@item.ServiceTitle</td>
                                        <td>@item.ServiceDescription</td>
                                        <td><a href="/WhyChooseYummy/DeleteWhyChooseYummy/@item.ServiceID/" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/WhyChooseYummy/UpdateWhyChooseYummy/@item.ServiceID/" class="btn btn-info">Güncelle</a></td>

                                    </tr>
                                }


                            </tbody>
                        </table>
                        <a href="/WhyChooseYummy/CreateWhyChooseYummy/" class="btn btn-success">Yeni Alan Ekle</a>

                    </div>
                </div>


            </div>
        </div>
    </div>
</section>


