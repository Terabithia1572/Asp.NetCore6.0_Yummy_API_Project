@model GetChefByIDDTO
@{
    ViewData["Title"] = "UpdateChef";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Yeni Şef Güncelleme Sayfası</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="ChefID" class="form-control" />
                            <label>Şef Adı Soyadı</label>
                            <input type="text" asp-for="ChefNameSurname" class="form-control" />
                            <br />
                            <label>Şef Başlık</label>
                            <input type="text" asp-for="ChefTitle" class="form-control" />
                            <br />
                            <label>Şef Açıklaması</label>
                            <input type="text" asp-for="ChefDescription" class="form-control" />
                            <br />
                            <label>Şef Görsel URL</label>
                            <input type="text" asp-for="ChefImageURL" class="form-control" />
                            <br />
                            <button class="btn btn-success">Şef Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



