@model CreateProductDTO
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Ürün Ekleme Sayfası</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <label>Ürün Adı</label>
                            <input type="text" asp-for="ProductName" class="form-control" />
                            <br />
                            <label>Ürün Fiyatı</label>
                            <input type="text" asp-for="ProductPrice" class="form-control" />
                            <br />
                            <label>Ürün Kategorisi</label>
                            <input type="text" asp-for="CategoryID" class="form-control" />
                            <br />
                            <label>Ürün Görsel URL</label>
                            <input type="text" asp-for="ProductImageURL" class="form-control" />
                            <br />
                            <label>Ürün Açıklaması</label>
                            <textarea asp-for="ProductDescription" class="form-control" rows="5"></textarea>
                            <br />
                            <button class="btn btn-primary">Ürün Ekle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

