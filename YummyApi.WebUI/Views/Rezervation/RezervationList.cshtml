@model List<ResultRezervationDTO>
@{
    ViewData["Title"] = "RezervationList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Rezervasyon Listesi</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Müşteri Adı</th>
                                    <th scope="col">Rezervasyon Tarihi</th>
                                    <th scope="col">Rezervasyon Saati</th>
                                    <th scope="col">Kişi Sayısı</th>
                                    <th scope="col">Rezervasyon Durumu</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Onayla</th>
                                    <th scope="col">İptal Et</th>
                                    <th scope="col">Beklet</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>

                                        <th scope="row">@count</th>
                                        <td>@item.ReservationNameSurname</td>
                                        <td>@item.ReservationDate</td>
                                        <td>@item.ReservationTime</td>
                                        <td>@item.CountOfPeople</td>
                                        <td>@item.ReservationStatus</td>
                                        <td><a href="/Rezervation/DeleteRezervation/@item.ReservationID/" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Rezervation/UpdateRezervation/@item.ReservationID/" class="btn btn-info">Güncelle</a></td>
                                        <td><a href="/Rezervation/AcceptRezervation/@item.ReservationID/" class="btn btn-success">Onayla</a></td>
                                        <td><a href="/Rezervation/CancelRezervation/@item.ReservationID/" class="btn btn-danger">İptal Et</a></td>
                                        <td><a href="/Rezervation/WaitRezervation/@item.ReservationID/" class="btn btn-warning">Beklet</a></td>

                                    </tr>
                                }


                            </tbody>
                        </table>
                        <a href="/Rezervation/CreateRezervation/" class="btn btn-success">Yeni Rezervasyon Ekle</a>

                    </div>
                </div>


            </div>
        </div>
    </div>
</section>

