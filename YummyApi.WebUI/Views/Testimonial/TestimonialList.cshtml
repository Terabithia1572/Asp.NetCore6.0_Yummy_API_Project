@model List<ResultTestimonialDTO>
@{
    ViewData["Title"] = "TestimonialList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0; // ID sayacı 
}


<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Yorum Listesi</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Müşteri Adı</th>
                                    <th scope="col">Müşteri Ünvan</th>
                                    <th scope="col">Müşteri Yorumu</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>

                                        <th scope="row">@count</th>
                                        <td>@item.testimonialNameSurname</td>
                                        <td>@item.testimonialTitle</td>
                                        <td>@item.testimonialComment</td>
                                        <td><a href="/Testimonial/DeleteTestimonial/@item.testimonialID/" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Testimonial/UpdateTestimonial/@item.testimonialID/" class="btn btn-info">Güncelle</a></td>

                                    </tr>
                                }


                            </tbody>
                        </table>
                        <a href="/Testimonial/CreateTestimonial/" class="btn btn-success">Yeni Yorum Ekle</a>

                    </div>
                </div>


            </div>
        </div>
    </div>
</section>




