@model List<ResultYummyEventDTO>
@{
    ViewData["Title"] = "YummyEventList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0; // ID sayacı
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Etkinlik Organizasyon Listesi</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Fiyat</th>  
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>

                                        <th scope="row">@count</th>
                                        <td>@item.YummyEventTitle</td>
                                        <td>@item.YummyEventDescription</td>
                                        <td>@item.YummyEventPrice</td>
                                        <td><a href="/YummyEvent/DeleteYummyEvent/@item.YummyEventID/" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/YummyEvent/UpdateYummyEvent/@item.YummyEventID/" class="btn btn-info">Güncelle</a></td>

                                    </tr>
                                }


                            </tbody>
                        </table>
                        <a href="/YummyEvent/CreateYummyEvent/" class="btn btn-success">Yeni Etkinlik Ekle</a>

                    </div>
                </div>


            </div>
        </div>
    </div>
</section>


