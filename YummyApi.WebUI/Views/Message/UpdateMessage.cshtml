@model GetMessageByIDDTO
@{
    ViewData["Title"] = "UpdateMessage";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Mesaj Güncelleme Sayfası</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="MessageID" />
                            <label>Gönderici Ad Soyad</label>
                            <input type="text" asp-for="MessageNameSurname" class="form-control" />
                            <br />
                            <label>Gönderici E-Mail</label>
                            <input type="text" asp-for="MessageEmail" class="form-control" />
                            <br />
                            <label>Mesaj Konusu</label>
                            <input type="text" asp-for="MessageSubject" class="form-control" />
                            <br />
                            <label>Mesaj İçeriği</label>
                            <input type="text" asp-for="MessageDetail" class="form-control" />
                            <br />
                            <button class="btn btn-primary">Mesajı Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

