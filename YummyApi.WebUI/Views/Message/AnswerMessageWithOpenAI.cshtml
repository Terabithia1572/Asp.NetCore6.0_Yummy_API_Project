@model GetMessageByIDDTO
@{
    ViewData["Title"] = "AnswerMessageWithOpenAI";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Open AI ile Otomatik Mesaj Yanıt Sayfası</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="MessageID" />
                            <label>Müşteri Mesajı</label>
                            <textarea class="form-control" rows="5" readonly asp-for="MessageDetail"></textarea>
                            <br />
                         
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

