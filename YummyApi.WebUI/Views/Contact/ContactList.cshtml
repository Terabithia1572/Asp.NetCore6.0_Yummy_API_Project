@model List<ResultContactDTO>
@{
    ViewData["Title"] = "ContactList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>İletişim Bilgileri Listesi</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                   
                                    <th scope="col">Adres</th>
                                    <th scope="col">Telefon</th>
                                    <th scope="col">E-Mail</th>
                                    <th scope="col">Açık- Kapalı Saatler</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                   
                                    <tr>

                                        
                                        <td>@item.ContactAddress</td>
                                        <td>@item.ContactPhone</td>
                                        <td>@item.ContactEmail</td>
                                        <td>@item.ContactOpenHours</td>
                                        <td><a href="/Contact/DeleteContact/@item.ContactID/" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Contact/UpdateContact/@item.ContactID/" class="btn btn-info">Güncelle</a></td>

                                    </tr>
                                }


                            </tbody>
                        </table>
                        <a href="/Contact/CreateContact/" class="btn btn-success">Yeni İletişim Bilgisi Ekle</a>

                    </div>
                </div>


            </div>
        </div>
    </div>
</section>




